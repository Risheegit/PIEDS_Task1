{% extends "portfolios/base.html" %}
{% block content %}
	<!-- Making a search bar -->
	<div class = "container">
		<form method = "GET" action = "{% url 'search' %}">
			<input type="text" placeholder="Enter company" size = "50" name="query" value="{{ request.GET.query }}">
			<button type="submit"><i class="fas fa-search"></i></button>
		</form>
	</div>
	<br></br>
	<!-- Making a filter -->
	<form action="{% url 'startup-filter' %}" method="post">
		{% csrf_token %}
		<label for="Industry">Choose your industry</label>
		<select name="industries" id="industries" size="4">
		  <option value="Technology">Technology</option>
		  <option value="Consumer">Consumer</option>
		  <option value="HealthTech">HealthTech</option>
		  <option value="FinTech">FinTech</option>
		  <option value="Consumer">Consumer</option>
		</select>
		<input type="submit" name="industry" value="Submit" />
  </form>
	<!-- Displaying every startup -->	<div class="row row-cols-1 row-cols-md-3 g-4">
	{% for startup in startups%}
	<div class= "col">
	<div class="card border-dark mb-3" style="width: 18rem;">
			<img src="{{ startup.logo.url }}" class="card-img-top" alt="Image not found">
			<div class="card-body">
			  <h5 class="card-title">{{ startup.startup_name }}</h5>
			  <p class="card-text">Industry: {{startup.industry}}</p>
			  <p class="card-text">{{startup.description }}</p>
			  <form action = "{% url 'external-redirect'  %}" method = "post">
				{% csrf_token %}
				<button type = "submit" name = 'mybtn' value = {{startup.website}}>Visit site</button>
			</form>
			</div>
		  </div>
	<div>
	</div>
	{% empty %}
	<div class = "container">
		<h3>No posts yet! Be the first to post</h3></div>
	{% endfor %}

{% endblock content %}
